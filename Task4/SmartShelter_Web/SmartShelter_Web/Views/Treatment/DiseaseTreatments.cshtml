@using SmartShelter_Web.Models.ViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DiseaseTreatmentsVM

<div class="row justify-content-end">
    @if (!Model.isClosed)
    {
        <a class="btn btn-info col-2 m-2" asp-action="CreateTreatment" asp-controller="Treatment"
           asp-route-animalId="@Model.Disease.AnimalId" asp-route-diseaseId="@Model.Disease.Id">Add Treatment</a>

    }
</div>
<div class="row text-center">
    <div class="card ">
        <div class="card-body">
            <h3 class="text-primary">@Model.Disease.Name Treatments</h3>
            <hr />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Exp Date</th>
                        <th>Notes</th>
                        <th>Staff Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var treatment in Model.Treatments)
                    {
                        <tr>
                            <td>@treatment.Treatment.Type</td>
                            <td>@treatment.Treatment.Date.Date</td>
                            <td>@(treatment.Treatment.ExpirationDate != null ? treatment.Treatment.ExpirationDate : " ")</td>
                            <td>@treatment.Treatment.Notes</td>
                            <td>@treatment.StaffName</td>
                            <td>
                                <div class="btn-group">
                                   
                                    @if (!Model.isClosed)
                                    {
                                        <a class="btn btn-info"
                                           asp-action="Supplies" asp-controller="Treatment"
                                           asp-route-treatmentId="@treatment.Treatment.Id" asp-route-isClosed="@false">Supplies</a>
                                        <a class="btn btn-outline-danger" asp-action="DeleteTreatment"
                                           asp-route-treatmentId="@treatment.Treatment.Id" 
                                        asp-route-animalId="@treatment.Treatment.AnimalId">Delete</a>
                                    }else{

                                    
                                    <a class="btn btn-info"
                                       asp-action="Supplies" asp-controller="Treatment"
                                       asp-route-treatmentId="@treatment.Treatment.Id" asp-route-isClosed="@true">Supplies</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>